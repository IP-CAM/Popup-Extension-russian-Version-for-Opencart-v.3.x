{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
            <div class="col-sm-10">
              <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
              {% if error_name %}
              <div class="text-danger">{{ error_name }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-title">{{ entry_title }}</label>
            <div class="col-sm-10">
              <input type="text" name="title" value="{{ title }}" placeholder="{{ entry_title }}" id="input-title" class="form-control" />
              {% if error_title %}
                <div class="text-danger">{{ error_title }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-text">{{ entry_text }}</label>
            <div class="col-sm-10">
              <textarea name="text" placeholder="{{ entry_text }}" id="input-text" data-toggle="summernote" data-lang="{{ summernote }}" class="form-control">{{ text }}</textarea>
              {% if error_text %}
                <div class="text-danger">{{ error_text }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-title">* {{ entry_size_window }}</label>
            <div class="col-sm-10">
              <div class="row">
                <div class="col-sm-3">
                  <label class="control-label" for="input-text" style="margin-bottom: 10px;">{{ entry_width }}</label>
                  <input type="text" name="width" value="{{ width }}" placeholder="{{ entry_width }}" id="input-width" class="form-control" />
                  {% if error_width %}
                    <div class="text-danger">{{ error_width }}</div>
                  {% endif %}
                </div>
                <div class="col-sm-9">
                  <label class="control-label" for="input-size-type" style="margin-bottom: 10px;">&nbsp;</label>
                  <select name="size_type" id="input-size-type" class="form-control">
                    {% if size_type %}
                      <option value="0">{{ text_pixel }}</option>
                      <option value="1" selected="selected">{{ text_percent }}</option>
                    {% else %}
                      <option value="0" selected="selected">{{ text_pixel }}</option>
                      <option value="1">{{ text_percent }}</option>
                    {% endif %}
                  </select>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="row" style="margin-bottom: 10px;">
              <div class="col-sm-12">
                <label class="col-sm-2 control-label" for="input-show-type">{{ entry_show_type }}</label>
                <div class="col-sm-10">
                  <select name="show_type" id="input-show-type" class="form-control">
                    <option value="0" {% if show_type == '0' %} selected="selected" {% endif %}>{{ text_onclick }}</option>
                    <option value="1" {% if show_type == '1' %} selected="selected" {% endif %}>{{ text_auto }}</option>
                    <option value="2" {% if show_type == '2' %} selected="selected" {% endif %}>{{ text_onhover }}</option>

                  </select>
                </div>
              </div>
            </div>
            <div class="row button_class" style="margin-bottom: 10px;">
              <div class="col-sm-12">
                <label class="col-sm-2 control-label" for="input-button-class"></label>
                <div class="col-sm-10">
                  <input type="text" name="button_class" value="{{ button_class }}" placeholder="{{ entry_button_class }}" id="input-button-class" class="form-control" />
                  {% if error_button_class %}
                    <div class="text-danger">{{ error_button_class }}</div>
                  {% endif %}
                </div>
              </div>
            </div>
            <div class="row show_frequency" style="margin-bottom: 10px;  display: none">
              <div class="col-sm-12">
                <label class="col-sm-2 control-label" for="input-show-freq">{{ entry_show_freq }}</label>
                <div class="col-sm-10">
                  <div class="row">
                    <div class="col-sm-3">
                      <input type="text" name="show_freq" value="{{ show_freq }}" placeholder="{{ entry_show_freq }}" id="input-show-freq" class="form-control" />
                      {% if error_show_freq %}
                        <div class="text-danger">{{ error_show_freq }}</div>
                      {% endif %}
                    </div>
                    <div class="col-sm-9">
                      <select name="show_freq_type" id="input-show-freq-type" class="form-control">
                          <option value="0" {% if show_freq_type == '0' %} selected="selected" {% endif %}>{{ text_minute }}</option>
                          <option value="1" {% if show_freq_type == '1' %} selected="selected" {% endif %}>{{ text_hour }}</option>
                          <option value="2" {% if show_freq_type == '2' %} selected="selected" {% endif %}>{{ text_day }}</option>
                          <option value="3" {% if show_freq_type == '3' %} selected="selected" {% endif %}>{{ text_week }}</option>
                          <option value="4" {% if show_freq_type == '4' %} selected="selected" {% endif %}>{{ text_month }}</option>
                      </select>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="row class_onhover" style="margin-bottom: 10px; display: none;">
              <div class="col-sm-12">
                <label class="col-sm-2 control-label" for="input-class-onhover"></label>
                <div class="col-sm-3">
                  <input type="text" name="class_onhover" value="{{ class_onhover }}" placeholder="{{ entry_class_onhover }}" id="input-class-onhover" class="form-control" />
                  {% if error_class_onhover %}
                    <div class="text-danger">{{ error_class_onhover }}</div>
                  {% endif %}
                </div>
                <label class="col-sm-2 control-label" for="input-class-onhover-position">{{ entry_class_onhover_position }}</label>
                <div class="col-sm-5">
                  <select name="class_onhover_position" id="input-class-onhover-position" class="form-control">
                    <option value="top" {% if class_onhover_position == 'top' %} selected="selected" {% endif %}>{{ text_top }}</option>
                    <option value="bottom" {% if class_onhover_position == 'bottom' %} selected="selected" {% endif %}>{{ text_bottom }}</option>
                    <option value="left" {% if class_onhover_position == 'left' %} selected="selected" {% endif %}>{{ text_left }}</option>
                    <option value="right" {% if class_onhover_position == 'right' %} selected="selected" {% endif %}>{{ text_right }}</option>
                  </select>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="status" id="input-status" class="form-control">
                {% if status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <link href="view/javascript/summernote/summernote.css" rel="stylesheet"/>
  <script type="text/javascript" src="view/javascript/summernote/summernote.js"></script>
  <script type="text/javascript" src="view/javascript/summernote/summernote-image-attributes.js"></script>
  <script type="text/javascript" src="view/javascript/summernote/opencart.js"></script>

  <script type="text/javascript"><!--

if($('#input-show-type').val() === "1") {
  $('.button_class').hide()
  $('.class_onhover').hide()
  $('.show_frequency').show()
} else if ($('#input-show-type').val() === "0") {
  $('.button_class').show()
  $('.class_onhover').hide()
  $('.show_frequency').hide()
} else if ($('#input-show-type').val() === "2") {
  $('.button_class').hide()
  $('.class_onhover').show()
  $('.show_frequency').hide()
}

$('#input-show-type').change(function() {
  if($(this).val() === "1") {
    $('.button_class').hide()
    $('.class_onhover').hide()
    $('.show_frequency').show()
  } else if($(this).val() === "0") {
    $('.button_class').show()
    $('.show_frequency').hide()
    $('.class_onhover').hide()
  } else if($(this).val() === "2") {
    $('.button_class').hide()
    $('.show_frequency').hide()
    $('.class_onhover').show()
  }
})
//--></script></div>
{{ footer }}
